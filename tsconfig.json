{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "es2015.iterable"],
    "skipLibCheck": true
  },
  "types": ["node"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
